<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Vespolina\Entity\Billing\BillingRequest" table="vespolina_billing_request">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="dueDate" type="datetime" />
        <field name="createdAt" type="datetime" />
        <field name="status" type="string" />
        <field name="periodStart" type="datetime" nullable="true" />
        <field name="periodEnd" type="datetime" nullable="true" />

        <one-to-one field="invoice" target-entity="Vespolina\Entity\Invoice\Invoice">
            <join-column name="invoice_id" referenced-column-name="id" />
        </one-to-one>

        <many-to-many field="orderItems" target-entity="Vespolina\Entity\Order\ItemInterface">
            <join-table name="billingRequest_Items">
                <join-columns>
                    <join-column name="billingRequest_id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="orderItem_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="pricingSet" target-entity="ImmersiveLabs\Pricing\Entity\PricingSet">
            <join-column name="pricingSet_id" referenced-column-name="id" />
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <many-to-one field="partner" target-entity="Vespolina\Entity\Partner\Partner">
            <join-column name="partner_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="paymentProfile" target-entity="Vespolina\Entity\Partner\PaymentProfile">
        </many-to-one>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="autoSetCreatedAt" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
